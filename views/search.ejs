<!DOCTYPE html>
<html>
<head>
  <title>Search Results</title>
</head>
<body>
  <h1>Search Results</h1>
  
  <!-- Search form -->
  <form action="/book/search" method="GET">
    <input type="text" name="q" placeholder="Search by book name" value="<%= query %>">
    <button type="submit">Search</button>
  </form>

  <% if (books.length > 0) { %>
    <table>
      <tr>
        <th>Book Name</th>
        <th>Author</th>
        <th>Publisher</th>
        <th>Price</th>
      </tr>
      <% books.forEach(function(book) { %>
        <tr>
          <td><%= book.book_name %></td>
          <td><%= book.book_author %></td>
          <td><%= book.book_publisher %></td>
          <td><%= book.book_price %></td>
        </tr>
      <% }); %>
    </table>
  <% } else { %>
    <p>No results found.</p>
  <% } %>
  
  <a href="/book/book_record">Back to Book Record</a>
</body>
</html>
