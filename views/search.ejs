<!-- search.ejs -->

<!DOCTYPE html>
<html>
<head>
  <title>Search Results</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color:blueviolet;
      margin: 0;
      padding: 0;
    }

    .container {
      max-width: 800px;
      margin: 20px auto;
      padding: 20px;
      background-color: #fff;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
    }

    h1 {
      font-size: 24px;
      margin-bottom: 10px;
    }

    ul {
      list-style: none;
      padding: 0;
    }

    li {
      margin-bottom: 10px;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>Search Results</h1>
    <form action="/book/search" method="GET">
      <input type="text" name="q" placeholder="Search by book name">
      <button type="submit">Search</button>
    </form>
    <p>Search query: <%= query %></p>

    <% if (books.length > 0) { %>
      <ul>
        <% books.forEach(function(book) { %>
          <li>
            <strong>Book Id:</strong><%=book.book_id%><br>
            <strong>Book Name:</strong> <%= book.book_name %><br>
            <strong>Author:</strong> <%= book.book_author %><br>
            <strong>Book Publisher:</strong> <%= book.book_publisher %><br>
            <strong>Book Price:</strong> <%= book.book_price %>
          </li>
        <% }); %>
      </ul>
    <% } else { %>
      <p>No results found.</p>
    <% } %>
  </div>
</body>
</html>
